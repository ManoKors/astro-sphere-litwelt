---
import { getCollection } from "astro:content"
import PageLayout from "@layouts/PageLayout.astro"
import TopLayout from "@layouts/TopLayout.astro"
import BottomLayout from "@layouts/BottomLayout.astro"
import fantasybooks from "@components/Fantasybooks"
import { FANTASYBOOKS } from "@consts"

const fantasybooks = (await getCollection("fantasybooks"))
  .filter(fantasybook => !project.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())

const tags = [...new Set(fantasybooks.flatMap(project => project.data.tags))]
  .sort((a, b) => a.localeCompare(b))
---

<PageLayout title={FANTASYBOOKS.TITLE} description={FANTASYBOOKS.DESCRIPTION}>
  <TopLayout>
    <div class="animate page-heading">
      {FANTASYBOOKS.TITLE}
    </div>
  </TopLayout>
  <BottomLayout>
    <div class="animate">
      <Projects client:load tags={tags} data={fantasybooks} />
    </div>
  </BottomLayout>
</PageLayout>
