---
interface Props {
  title: string;
  author: string;
  publicationDate: string;
  description: string;
  coverImage: string;
  authorImage: string;
  link?: string;
}

const { title, author, publicationDate, description, coverImage, authorImage, link } = Astro.props;
---

<div class="book-highlight">
  <div class="book-card">
    <div class="book-card-inner">
      <div class="book-card-front">
        <img src={coverImage} alt={`Cover of ${title}`} class="cover-image" />
        <h2 class="book-title">{title}</h2>
        <p class="book-author">{author}</p>
      </div>
      <div class="book-card-back">
        <img src={authorImage} alt={`Image of ${author}`} class="author-image" />
        <div class="book-details">
          <h3>About the Book</h3>
          <p>{description}</p>
          <p class="publication-date"><strong>Published:</strong> {publicationDate}</p>
          {link && (
            <a href={link} class="book-link" target="_blank" rel="noopener noreferrer">Learn more</a>
          )}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.book-highlight {
  perspective: 1000px;
  margin: 2rem 0;
  display: flex;
  justify-content: center;
}

.book-card {
  width: 300px;
  height: 400px;
  position: relative;
  transform-style: preserve-3d;
  transition: transform 0.6s;
}

.book-card-inner {
  position: relative;
  width: 100%;
  height: 100%;
  transform-style: preserve-3d;
}

.book-card:hover .book-card-inner {
  transform: rotateY(180deg);
}

.book-card-front, .book-card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.book-card-front {
  background-color: #fff;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.book-card-back {
  background-color: #2c3e50;
  color: white;
  transform: rotateY(180deg);
  padding: 1rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.cover-image {
  width: 100%;
  height: 60%;
  object-fit: cover;
}

.author-image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  object-fit: cover;
  margin-bottom: 1rem;
}

.book-title {
  margin: 0.5rem 0;
  font-size: 1.5rem;
  font-weight: bold;
}

.book-author {
  font-size: 1rem;
  color: #555;
}

.book-details {
  text-align: center;
}

.book-link {
  margin-top: 1rem;
  color: #1abc9c;
  text-decoration: none;
  font-weight: bold;
  transition: color 0.3s;
}

.book-link:hover {
  color: #16a085;
}

.publication-date {
  margin-top: 1rem;
}
</style>
