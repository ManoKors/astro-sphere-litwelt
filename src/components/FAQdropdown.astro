---
const { question, answer } = Astro.props;

function toggle() {
  const details = document.getElementById(question) as HTMLDetailsElement;
  if (details) {
    details.open = !details.open;
  }
}
---

<div class="faq-item">
  <details id={question} class="faq-details">
    <summary onclick={toggle}>
      {question}
    </summary>
    <p>{answer}</p>
  </details>
</div>

<style>
  .faq-item {
    margin-bottom: 1rem;
  }
  .faq-details summary {
    font-size: 1.25rem;
    font-weight: bold;
    cursor: pointer;
  }
  .faq-details p {
    margin: 0.5rem 0 0;
    padding-left: 1rem;
    line-height: 1.5;
  }
</style>
