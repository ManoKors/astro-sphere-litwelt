--- 
// Props passed from MDX file
const { name, bio, image } = Astro.props;
---
<div class="author-section">
  <img src={image} alt={name} class="author-image" />
  <div class="author-details">
    <h3>{name}</h3>
    <p>{bio}</p>
  </div>
</div>

<style>
  .author-section {
    display: flex;
    align-items: center;
    margin-top: 2rem;
  }
  .author-image {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-right: 1rem;
  }
  .author-details h3 {
    margin: 0;
    font-size: 1.25rem;
  }
  .author-details p {
    margin: 0.5rem 0 0;
  }
</style>
